<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.LoginActivity"
    android:background="@drawable/background_screen">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/custom_panel_bgcolor"
            android:orientation="vertical"
            >

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="41dp"
                android:hint="Email"
                app:boxBackgroundColor="@color/white"
                app:hintTextColor="@color/gray_light"
                app:boxStrokeColor="@color/green"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="28dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edlogin_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green"
                    android:inputType="textEmailAddress"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="28dp"
                android:hint="Password"
                app:boxBackgroundColor="@color/white"
                app:hintTextColor="@color/gray_light"
                app:boxStrokeColor="@color/green"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edPwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green"
                    android:inputType="textPassword"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <CheckBox
                android:id="@+id/cbRemenber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="28dp"
                android:text="Remember"
                android:buttonTint="@color/redv"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_button_enabled"
                android:text="LOG IN"
                android:textColor="@color/white"
                android:layout_marginTop="54dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btCreateAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_button_nocolor"
                android:text="Create account"
                android:textColor="@color/green"
                android:layout_margin="16dp"
                />

        </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>